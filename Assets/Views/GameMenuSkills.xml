					</Region>
					<Region Margin="20%, 0, 60%, 0">
						<Image Click="ChangeToWar" BackgroundImagePreserveAspect="True" Width="100%" Height="100%" BackgroundImage="Sprites/Icon_128x128.psd" />
					</Region>
					<Region Margin="40%, 0, 40%, 0">
						<Image Click="ChangeToNature" BackgroundImagePreserveAspect="True" Width="100%" Height="100%" BackgroundImage="Sprites/Icon_128x128.psd" />
