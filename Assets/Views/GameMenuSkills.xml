						<Label Id="SkillElementDefense" Text="Defense" Height="16px" TextAlignment="Center" Style="TamarrionHeader" />
					</ViewSwitcher>
				</Region>
				<HorizontalBar Alignment="Bottom" Height="20%" />
			</Region>
			<Region Id="SkillTreeArea" Alignment="Bottom" Margin="0, 20%, 0, 0">
				<ViewSwitcher Id="ContentViewSwitcher_SkillTree">
					<SkillTreeMagic Id="SkillTreeMagic" />
